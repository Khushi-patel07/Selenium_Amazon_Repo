pipeline{
     agent any
       environment{
       notifyEmail="khushi.patel@nagarro.com"
}
  tools{
    maven 'maven_home'
   }
   triggers{
      cron('0 06 * * *')
   }
  stages{
      stage("code checkout"){
          steps{
          bat "echo hello"
          }
   }
   stages{
      stage("code build"){
          steps{
          bat "mvn clean"
          }
    }
    stages{
      stage("unit test"){
          steps{
          bat "mvn test"
          }
   }
}
post{
     success{
         bat"echo success"
          }
      }
}
